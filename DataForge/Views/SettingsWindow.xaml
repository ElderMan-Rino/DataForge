<Window x:Class="Elder.DataForge.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Framework Settings" Height="400" Width="480" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Framework Configuration" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333333"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Base Generation Path (Tools/Output)" FontWeight="SemiBold"/>
                <DockPanel Margin="0,5,0,15">
                    <Button Content="Browse..." DockPanel.Dock="Right" Width="75" Margin="5,0,0,0" Click="BtnBaseBrowse_Click"/>
                    <TextBox x:Name="TxtBaseOutputPath" Text="{Binding OutputPath}" IsReadOnly="True" Background="#E9E9E9" Padding="3"/>
                </DockPanel>

                <TextBlock Text="Target Namespace" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtRootNamespace" Text="{Binding RootNamespace}" Margin="0,5,0,15" Padding="3"/>
                <TextBlock Text="Output DLL Name" FontWeight="SemiBold"/>
                
                <TextBox x:Name="TxtOutputDllName" Text="{Binding OutputDllName}" Margin="0,5,0,15" Padding="3" ToolTip="The name of the generated DLL file"/>
                <TextBlock Text="MSBuild Executable Path" FontWeight="SemiBold"/>
                
                <DockPanel Margin="0,5,0,15">
                    <Button Content="Browse..." DockPanel.Dock="Right" Width="75" Margin="5,0,0,0" Click="BtnMsBuildBrowse_Click"/>
                    <TextBox x:Name="TxtMsBuildPath" Text="{Binding MsBuildPath}" IsReadOnly="True" Background="#E9E9E9" Padding="3"/>
                </DockPanel>

            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save Settings" Width="100" Height="30" Margin="0,0,10,0" Click="BtnSave_Click" Background="#007ACC" Foreground="White" FontWeight="Bold"/>
            <Button Content="Cancel" Width="80" Height="30" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>