<Window x:Class="DataForge.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Framework Settings" Height="400" Width="450" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Framework Configuration" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Export Files Path (Assets)"/>
            <DockPanel Margin="0,5,0,15">
                <Button Content="Browse..." DockPanel.Dock="Right" Width="75" Margin="5,0,0,0" Click="BtnBrowse_Click"/>
                <TextBox x:Name="TxtProjectPath" IsReadOnly="True" Background="#F0F0F0"/>
            </DockPanel>

            <TextBlock Text="Root Namespace"/>
            <TextBox x:Name="TxtRootNamespace" Margin="0,5,0,10"/>

            <TextBlock Text="Domain Layer Namespace"/>
            <TextBox x:Name="TxtDomainNamespace" Margin="0,5,0,10"/>

            <TextBlock Text="ECS/Dots Layer Namespace"/>
            <TextBox x:Name="TxtDotsNamespace" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="80" Height="25" Margin="0,0,10,0" Click="BtnSave_Click"/>
            <Button Content="Cancel" Width="80" Height="25" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>